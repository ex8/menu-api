{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2017",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}